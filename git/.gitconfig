[user]
	name = Zeke Weng
	email = ZekeWengP@gmail.com

[core]
	editor = nvim
	excludesfile = ~/.gitignore_global
	autocrlf = input
	ignorecase = false

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	default = simple
	autoSetupRemote = true

[merge]
	tool = nvim

[diff]
	tool = nvim

[alias]
	# Basic aliases
	st = status
	co = checkout
	br = branch
	ci = commit
	ca = commit --amend
	dt = difftool
	mt = mergetool

	# Log aliases
	lg = log --graph --pretty=format:'%C(green)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	lga = log --graph --pretty=format:'%C(green)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	lgp = log --graph --pretty=format:'%C(green)%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit -p

	# Stash aliases
	sl = stash list
	sa = stash apply
	ss = stash save
	sp = stash pop

	# Show aliases
	last = log -1 HEAD --pretty=format:'%C(green)%h%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset'
	unstage = reset HEAD --
	discard = checkout --

	# Branch management
	cleanup = "!git branch --merged | grep -v '\\*\\|main\\|master\\|develop' | xargs -n 1 git branch -d"

[color]
	ui = auto

[color "branch"]
	current = green reverse
	local = green
	remote = yellow

[color "diff"]
	meta = green bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = green
	changed = green bold
	untracked = cyan

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true